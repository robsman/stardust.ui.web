<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="com.infinity.bpm" module="ipp-portal-common"
      revision="${ipp.version.full}">
      <!-- must define an icefaces config -->
      <extends organisation="com.infinity.bpm" module="icefaces-impl" revision="latest.integration"
         extendType="configurations,dependencies"/>
   </info>

   <configurations>
      <conf name="ipp-portal-common-compile" extends="icefaces" description="IPP Portal Common - Compile Scope" />
      <conf name="ipp-portal-common-runtime" extends="ipp-portal-common-compile" description="IPP Portal Common - Runtime Scope" />
      <conf name="ipp-portal-common-provided" description="IPP Portal Common - Provided Scope" />
      
      <conf name="ipp-portal-common-sources" description="IPP Portal Common - Sources" />
      
      <conf name="ipp-portal-web" description="IPP Portal Web Archive" />
      <conf name="ipp-portal-base-lib-module-runtime" extends="icefaces" description="IPP Portal WEBINF-lib Archives" visibility="private" />
   
      <conf name="jsf-api-module-compile" description="JSF API Classes - Compile Scope" />
      
      <conf name="jsf-myfaces-module-compile" description="JSF API and Implementation Classes - MyFaces - Compile Scope" />
      <conf name="jsf-myfaces-module-runtime" description="JSF API and Implementation Classes - MyFaces - Runtime Scope" />
      
      <conf name="jsf-mojarra-module-compile" description="JSF API and Implementation Classes - Mojarra - Compile Scope" />
      <conf name="jsf-mojarra-module-runtime" description="JSF API and Implementation Classes - Mojarra - Runtime Scope" />
   
      <conf name="compile" extends="ipp-portal-common-compile" visibility="private" description="IPP Portal Common" />
      
      <conf name="test" visibility="private" description="Test dependencies" />
      
      <conf name="pom" description="IPP Portal Common POMs" />
      <conf name="module-pom" description="Nirvana Module JSF POMs" />
   </configurations>

   <publications>
      <artifact name="ipp-portal-common" type="jar" conf="ipp-portal-common-compile, ipp-portal-common-runtime, ipp-portal-common-provided" />
      <artifact name="ipp-portal-common" type="jar" conf="ipp-portal-common-sources" m:classifier="sources" />
      <artifact name="ipp-portal" type="war" conf="ipp-portal-web" />
      
      <artifact name="ipp-portal-common" type="pom" conf="pom" ext="pom" />
      <artifact name="ipp-portal" type="pom" conf="pom" ext="pom" />
      
      <artifact name="jsf-api-module" type="pom" conf="module-pom" ext="pom" />
      <artifact name="jsf-myfaces-module" type="pom" conf="module-pom" ext="pom" />
      <artifact name="jsf-mojarra-module" type="pom" conf="module-pom" ext="pom" />
   </publications>

   <dependencies>      
      <!-- ipp-portal-common-compile -->
      <dependency org="com.infinity.bpm" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-portal-common-compile->engine-module-compile" />
      <dependency org="com.infinity.bpm" name="carnot-spring-module" rev="${ipp.version.full}" conf="ipp-portal-common-compile->spring-module-compile" />
      <dependency org="com.infinity.bpm" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-portal-common-compile->logging-log4j-module-compile"/>
      <dependency org="com.infinity.bpm" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-portal-common-compile->logging-slf4j-log4j-module-compile"/>
      
      <!-- ipp-portal-common-runtime -->
      <dependency org="com.infinity.bpm" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-portal-common-runtime->engine-module-runtime" />
      <dependency org="com.infinity.bpm" name="carnot-spring-module" rev="${ipp.version.full}" conf="ipp-portal-common-runtime->spring-module-runtime" />
      <dependency org="backport-util-concurrent" name="backport-util-concurrent" rev="3.1" conf="ipp-portal-common-runtime->default" />
      <dependency org="commons-beanutils" name="commons-beanutils" rev="1.8.0" conf="ipp-portal-common-runtime->default" />
      <dependency org="commons-collections" name="commons-collections" rev="3.2" conf="ipp-portal-common-runtime->default" />
      <dependency org="commons-digester" name="commons-digester" rev="1.8" conf="ipp-portal-common-runtime->default" />
      <dependency org="commons-lang" name="commons-lang" rev="2.4" conf="ipp-portal-common-runtime->default" />
      <!-- spring-webmvc contains the DispatcherServlet which is necessary for spring remoting -->
      <dependency org="org.springframework" name="spring-webmvc" transitive="false" rev="3.0.5.RELEASE" conf="ipp-portal-common-runtime->default"/>

      <!-- ipp-portal-common-provided -->
      <dependency org="javax.servlet" name="servlet-api" rev="2.4" conf="ipp-portal-common-provided, compile->default" />
      <dependency org="javax.el" name="el-api" rev="1.0" conf="ipp-portal-common-provided, compile->default" />
      
      <!-- ipp-portal-common-provided, jsf-api-module-compile, jsf-myfaces-module-compile -->
      <dependency org="org.apache.myfaces.core" name="myfaces-api" rev="1.1.5" conf="ipp-portal-common-provided, jsf-api-module-compile, jsf-myfaces-module-compile->default">
         <exclude org="commons-lang" module="commons-lang"/>
         <exclude org="commons-digester" module="commons-digester"/>
         <exclude org="commons-logging" module="commons-logging"/>
         <exclude org="javax.servlet" module="jstl"/>
      </dependency>
      <!-- force latest revision in jsf-api-module and jsf-myfaces-module -->
      <dependency org="commons-lang" name="commons-lang" rev="2.4" conf="jsf-api-module-compile, jsf-myfaces-module-compile->default"/>
      <dependency org="commons-digester" name="commons-digester" rev="1.8" conf="jsf-api-module-compile, jsf-myfaces-module-compile->default"/>
      <dependency org="commons-logging" name="commons-logging" rev="1.1.1" conf="jsf-api-module-compile, jsf-myfaces-module-compile->default"/>
      <dependency org="javax.servlet" name="jstl" rev="1.2" conf="jsf-api-module-compile, jsf-myfaces-module-compile->default"/>
      
      <!-- compile, jsf-mojarra-module-compile -->
      <dependency org="javax.faces" name="jsf-api" rev="1.1_02" conf="compile, jsf-mojarra-module-compile->default" />
      
      <!-- jsf-myfaces-module-runtime -->
      <dependency org="org.apache.myfaces.core" name="myfaces-impl" rev="1.1.5" conf="jsf-myfaces-module-runtime->default">
         <exclude org="commons-collections" module="commons-collections"/>
      </dependency>
      <!-- force correct revision in module POM --> 
      <dependency org="commons-collections" name="commons-collections" rev="3.2" conf="jsf-myfaces-module-runtime->default"/>
      <dependency org="com.sun.el" name="el-ri" rev="1.0" conf="jsf-myfaces-module-runtime->default" />
      
      <!-- jsf-mojarra-module-runtime -->
      <dependency org="javax.faces" name="jsf-impl" rev="1.1_02" conf="jsf-mojarra-module-runtime->default" />

      <!-- ipp-portal-base-lib-module-runtime: any modification results in a change of the WEB-INF/lib folder and therefore configure must be adjusted -->      
      <dependency org="org.apache.myfaces.core" name="myfaces-api" rev="1.1.5" conf="ipp-portal-base-lib-module-runtime->default">
         <exclude org="javax.servlet" module="jstl"/>
      </dependency>
      <dependency org="org.apache.myfaces.core" name="myfaces-impl" rev="1.1.5" conf="ipp-portal-base-lib-module-runtime->default">
         <exclude org="commons-codec" module="commons-codec"/>
      </dependency>      
      
      <dependency org="org.icepdf" name="icepdf-core" rev="4.3.2" transitive="false" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="com.infinity.bpm" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-portal-base-lib-module-runtime->jcr-vfs-module-runtime">
         <exclude org="commons-fileupload" module="commons-fileupload"/>
         <exclude org="com.infinity.bpm" name="carnot-engine"/>
         <exclude org="javax.jcr" module="jcr"/>
         <exclude org="org.springframework" module="spring-aop"/>
         <exclude org="org.springframework" module="spring-asm"/>
         <exclude org="org.springframework" module="spring-beans"/>
         <exclude org="org.springframework" module="spring-context"/>
         <exclude org="org.springframework" module="spring-core"/>
         <exclude org="org.springframework" module="spring-expression"/>
         <exclude org="org.springframework" module="spring-tx"/>
      </dependency>

      <dependency org="com.sun.el" name="el-ri" rev="1.0" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="javax.mail" name="mail" rev="1.4" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="net.sourceforge.jexcelapi" name="jxl" rev="2.6.10" conf="ipp-portal-base-lib-module-runtime->default">
         <exclude org="log4j" module="log4j"/>
      </dependency>
      <dependency org="org.springframework" name="spring-webmvc" transitive="false" rev="3.0.5.RELEASE" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="org.springframework" name="spring-web" transitive="false" rev="3.0.5.RELEASE" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="aopalliance" name="aopalliance" transitive="false" rev="1.0" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="org.apache.geronimo.specs" name="geronimo-ejb_2.1_spec" transitive="false" rev="1.1" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="commons-discovery" name="commons-discovery" rev="0.4" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="javax.media" name="jai_imageio-infinity01" rev="1.1" conf="ipp-portal-base-lib-module-runtime->default"/>
      <dependency org="net.sourceforge.htmlcleaner" name="htmlcleaner" rev="2.1" conf="ipp-portal-base-lib-module-runtime->default" />      
      <dependency org="backport-util-concurrent" name="backport-util-concurrent" rev="3.1" conf="ipp-portal-base-lib-module-runtime->default" />
      
      <!-- test -->
      <dependency org="junit" name="junit" rev="4.10" conf="test->default" />

      <exclude org="commons-fileupload" module="commons-fileupload" conf="ipp-portal-base-lib-module-runtime"/>
      <exclude org="commons-httpclient" module="commons-httpclient" conf="ipp-portal-base-lib-module-runtime"/>
      <exclude org="commons-codec" module="commons-codec" conf="ipp-portal-base-lib-module-runtime"/>
      
      <override org="commons-beanutils" module="commons-beanutils" rev="1.8.0" />
      <override org="commons-digester" module="commons-digester" rev="1.8" />
      <override org="commons-logging" module="commons-logging" rev="1.1.1" />
      <override org="commons-lang" module="commons-lang" rev="2.4" />
      <override org="commons-collections" module="commons-collections" rev="3.2" />
      <override org="backport-util-concurrent" module="backport-util-concurrent" rev="3.1"/>
      
   </dependencies>   
</ivy-module>
