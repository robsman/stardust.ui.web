<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.ui.web" module="ipp-process-portal"
      revision="${ipp.version.full}" />

   <configurations>
      <conf name="ipp-workflow-perspective-compile" description="Process Portal - Compile Scope" />
      <conf name="ipp-workflow-perspective-runtime" extends="ipp-workflow-perspective-compile" description="Process Portal - Runtime Scope" />
      <conf name="ipp-workflow-perspective-provided" description="Process Portal - Provided Scope" />
      
      <conf name="ipp-workflow-perspective-sources" description="Process Portal - Sources" />
      
      <conf name="test" visibility="private" description="Test dependencies" />

      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="provided" visibility="private" extends="ipp-workflow-perspective-provided" />
      <conf name="compile" visibility="private" extends="provided,ipp-workflow-perspective-compile" />
      <conf name="runtime" visibility="private" extends="ipp-workflow-perspective-runtime" />
      <conf name="all" visibility="private" extends="provided, compile, runtime, test" />
      
      <conf name="pom" description="Process Portal POMs" />
   </configurations>

   <publications>
      <artifact name="ipp-workflow-perspective" type="jar" conf="ipp-workflow-perspective-compile, ipp-workflow-perspective-runtime, ipp-workflow-perspective-provided" />
      <artifact name="ipp-workflow-perspective" type="jar" conf="ipp-workflow-perspective-sources" m:classifier="sources" />
      
      <artifact name="ipp-workflow-perspective" type="pom" conf="pom" ext="pom" />
   </publications>

   <dependencies>
      <!-- ipp-workflow-perspective-compile -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->web-client-module-compile" />
      <dependency org="org.eclipse.stardust.engine" name="carnot-spring-module" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->spring-module-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->ipp-portal-common-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-views-common" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->ipp-views-common-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-api" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->ipp-portal-api-compile" />
      
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-common-introspection" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->stardust-common-introspection-compile" />
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-common-introspection-xsd" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->stardust-common-introspection-xsd-compile" />
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-ui-form" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->stardust-ui-form-compile" />
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-ui-form-jsf" rev="${ipp.version.full}" conf="ipp-workflow-perspective-compile->stardust-ui-form-jsf-compile" />
      
      <!-- ipp-workflow-perspective-runtime -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-workflow-perspective-runtime->web-client-module-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-workflow-perspective-runtime->ipp-portal-common-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-views-common" rev="${ipp.version.full}" conf="ipp-workflow-perspective-runtime->ipp-views-common-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-api" rev="${ipp.version.full}" conf="ipp-workflow-perspective-runtime->ipp-portal-api-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-graphics-common" rev="${ipp.version.full}" conf="ipp-workflow-perspective-runtime->ipp-graphics-common-runtime" />
   
      <!-- ipp-workflow-perspective-provided -->
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-workflow-perspective-provided->jsf-api-module-compile" />
      <dependency org="javax.servlet" name="servlet-api" rev="${servlet-api.version}" conf="ipp-workflow-perspective-provided, compile->default" />
      <dependency org="javax.el" name="el-api" rev="${el-api.version}" conf="ipp-workflow-perspective-provided, compile->default" />
   
      <!-- compile -->
      <dependency org="javax.faces" name="jsf-api" rev="${jsf-api.version}" conf="compile->default" />
   
      <!-- test -->
      <dependency org="junit" name="junit" rev="${junit.version}" conf="test->default">
         <exclude org="org.hamcrest" module="hamcrest-core" />
      </dependency>
      <dependency org="org.hamcrest" name="hamcrest-core" rev="${hamcrest-core.version}" conf="test->default" />

   </dependencies>
</ivy-module>
