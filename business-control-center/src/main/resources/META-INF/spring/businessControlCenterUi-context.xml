<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:ippui="http://infinity.com/bpm/portal/common/uiDefinition"
      xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://infinity.com/bpm/portal/common/uiDefinition http://infinity.com/bpm/portal/common/uiDefinition.xsd">

   <!-- BCC provided extension of process portal perspective -->
	<ippui:perspective id="ippBccPerspective" messageBundles="business-control-center-messages"
		controller="businessControlCenterPerspectiveEventHandler">
		<ippui:preferences>
			<ippui:preferencePage name="icon" include="sc sc-lg sc-chart-bar" />
			<ippui:preferencePage name="helpDocumentation"
				include="/plugins/doc/portal/execution-clients/carnot-clients.html" />
		</ippui:preferences>

	<!--  MENU -->
      <!-- <ippui:menuSection name="bccMenu"
        include="/plugins/business-control-center/extensions/menu/bccMenu.xhtml" /> -->

	<!--  Launch Panels -->
      <ippui:launchPanel name="managementViews"
            include="/plugins/business-control-center/extensions/launchpad/managementViews.xhtml"  />
      <ippui:launchPanel name="favoriteManagementViews"
            include="/plugins/business-control-center/extensions/launchpad/favoriteViews.xhtml" />
            
	  <ippui:launchPanel name="myReportsViewPanel"
            include="/plugins/business-control-center/extensions/launchpad/myReportsPanel.xhtml" />
	<!--  TOOLBARS -->
      <ippui:toolbarSection name="ganttChartViewToolbar"
			include="/plugins/business-control-center/extensions/toolbar/ganttChartViewToolbar.xhtml"
         	requiredView="ganttChartView" />
         	
       <ippui:toolbarSection name="roleManagerDetailToolbar"
			include="/plugins/business-control-center/extensions/toolbar/roleManagerDetailToolbar.xhtml"
         	requiredView="roleManagerDetailView" />
         	
       <ippui:toolbarSection name="userManagerDetailToolbar"
			include="/plugins/business-control-center/extensions/toolbar/userManagerDetailToolbar.xhtml"
         	requiredView="userManagerDetailView" />
	
       <ippui:toolbarSection name="priorityOverviewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/priorityOverviewToolbar.xhtml"
            requiredView="processOverviewView" />
            
       <ippui:toolbarSection name="completedActivitiesToolbar"
            include="/plugins/business-control-center/extensions/toolbar/completedActivitiesToolbar.xhtml"
            requiredView="completedActivities" />
       <ippui:toolbarSection name="pendingActivitiesToolbar"
            include="/plugins/business-control-center/extensions/toolbar/pendingActivitiesToolbar.xhtml"
            requiredView="pendingActivities" />
       <ippui:toolbarSection name="postponedActivitiesToolbar"
            include="/plugins/business-control-center/extensions/toolbar/postponedActivitiesToolbar.xhtml"
            requiredView="postponedActivities" />
     
       <ippui:toolbarSection name="resourceAvailabilityViewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/resourceAvailabilityViewToolbar.xhtml"
            requiredView="resourceAvailabilityView" />
       <ippui:toolbarSection name="roleAssignmentViewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/roleAssignmentViewToolbar.xhtml"
            requiredView="roleAssignmentView" />
       <ippui:toolbarSection name="resourceLoginViewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/resourceLoginViewToolbar.xhtml"
            requiredView="resourceLoginView" />
       <ippui:toolbarSection name="resourcePerformanceViewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/resourcePerformanceViewToolbar.xhtml"
            requiredView="resourcePerformance" />
       <ippui:toolbarSection name="performanceTeamleaderToolbar"
            include="/plugins/business-control-center/extensions/toolbar/performanceTeamleaderToolbar.xhtml"
            requiredView="performanceTeamleader" />

       <ippui:toolbarSection name="costsandControllingToolbar"
            include="/plugins/business-control-center/extensions/toolbar/costsandControllingToolbar.xhtml"
            requiredView="costs" />
            
       <ippui:toolbarSection name="trafficLightViewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/trafficLightViewToolbar.xhtml"
            requiredView="trafficLightView" />
            
       <ippui:toolbarSection name="activityCriticaliyMgrViewToolbar"
            include="/plugins/business-control-center/extensions/toolbar/activityCriticaliyMgrViewToolbar.xhtml"
            requiredView="activityCriticalityManagerView" />
  
		<!--  VIEWS -->
		<ippui:view name="categoryTree" include="/plugins/business-control-center/views/categoryTree.xhtml" controller="categoryTree"/>
		
		<ippui:view name="roleManagerDetailView" include="/plugins/business-control-center/views/roleManagerDetailView.xhtml" controller="roleManagerDetail"
			identityParams="roleId" />
	   	<ippui:view name="userManagerDetailView" include="/plugins/business-control-center/views/userManagerDetailView.xhtml" controller="userManagerDetail"
	   		identityParams="userOid" />
	   	
		<ippui:view name="processOverviewView" include="/plugins/business-control-center/views/processOverviewView.xhtml" controller="businessProcessManager">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/process_manager.png" />
			</ippui:preferences>
	   	</ippui:view>
			
	   	<ippui:view name="processSearchView" include="/plugins/business-control-center/views/processSearchView.xhtml" controller="processSearchBean">
			<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/cog_search.png" />
			</ippui:preferences>
	    </ippui:view>
	   	
		<ippui:view name="pendingActivities" include="/plugins/business-control-center/views/pendingActivities.xhtml" controller="openActivitiesBean">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/pending_activities.png" />
			</ippui:preferences>
	   	</ippui:view>
		<ippui:view name="completedActivities" include="/plugins/business-control-center/views/completedActivities.xhtml" controller="completedActivitiesBean">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/process-history/activity_completed.png" />
			</ippui:preferences>
	   	</ippui:view>
		<ippui:view name="postponedActivities" include="/plugins/business-control-center/views/postponedActivities.xhtml" controller="postponedActivities">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/activity_postponed.png" />
			</ippui:preferences>
	   	</ippui:view>
		<ippui:view name="strandedActivities" include="/plugins/html5-business-control-center/partials/views/strandedActivitiesView.html">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/activity_stranded.png" />
			</ippui:preferences>
	   	</ippui:view>
	   	
		<ippui:view name="resourceAvailabilityView" include="/plugins/business-control-center/views/resourceAvailabilityView.xhtml"  controller="processResourceMgmtBean">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/group.png" />
			</ippui:preferences>
	   	</ippui:view>
		<ippui:view name="roleAssignmentView" include="/plugins/business-control-center/views/roleAssignmentView.xhtml" controller="roleAssignment" >
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/role.png" />
			</ippui:preferences>
	   	</ippui:view>
		<ippui:view name="resourceLoginView" include="/plugins/business-control-center/views/resourceLoginView.xhtml" controller="resourceLogin">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/group_key.png" />
			</ippui:preferences>
	   	</ippui:view>
		
	   	<ippui:view name="resourcePerformance" include="/plugins/business-control-center/views/resourcePerformance.xhtml" controller="resourcePerformance">
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/chart-up.png" />
			</ippui:preferences>
	   	</ippui:view>
	   	
		<ippui:view name="performanceTeamleader" include="/plugins/business-control-center/views/performanceTeamleader.xhtml" controller="performanceTeamleader" >
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/chart-up-color.png" />
			</ippui:preferences>
	   	</ippui:view>
	   	
		<ippui:view name="trafficLightView" include="/plugins/business-control-center/views/trafficLightView.xhtml" controller="trafficLightViewManagerBean">
			<ippui:preferences>
				<ippui:preferencePage name="configuration"
					include="/plugins/business-control-center/views/trafficLightViewConfigPanel.xhtml" />
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/traffic_light.png" />
			</ippui:preferences>
		</ippui:view>
		
		<ippui:view name="costs" include="/plugins/business-control-center/views/costs.xhtml" controller="costsBean">
			<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/money-coin.png" />
			</ippui:preferences>
		</ippui:view>

		<ippui:view name="activityCriticalityManagerView" include="/plugins/business-control-center/views/activityCriticalityManagerView.xhtml" controller="activityCriticalityManagerBean" >
	   		<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/criticality_manager.png" />
			</ippui:preferences>
	   	</ippui:view>

		<ippui:view name="ganttChartView"
			include="/plugins/business-control-center/views/ganttChartView.xhtml"
			controller="ganttChartSelectionBean" identityParams="processInstanceOId">
			<ippui:preferences>
				<ippui:preferencePage name="configuration"
				include="/plugins/business-control-center/views/ganttChartConfigurationDialog.xhtml" />
			</ippui:preferences>
		</ippui:view>

		<ippui:view name="processDiagramView"
			include="/plugins/business-control-center/views/processDiagramView.xhtml"
			controller="ippBCCDiagramBean" identityParams="processInstanceOId" />

		<ippui:view name="deputyTeamMemberView"
			include="/plugins/business-control-center/views/deputyTeamMemberView.xhtml"
			controller="deputyTeamMemberBean">
			<ippui:preferences>
				<ippui:preferencePage name="icon"
					include="/plugins/views-common/images/icons/user-silhouette.png" />
			</ippui:preferences>
		</ippui:view>
   </ippui:perspective>
</beans>
