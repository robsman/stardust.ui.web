<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:ippui="http://infinity.com/bpm/portal/common/uiDefinition"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://infinity.com/bpm/portal/common/uiDefinition http://infinity.com/bpm/portal/common/uiDefinition.xsd">

	<ippui:perspectiveExtension
		targetPerspective="*" id="ippHtml5BusinessControlCenterPerspective"
		messageBundles="html5-business-control-center">
		<ippui:viewsExtension>
			<ippui:view name="resourceAvailabilityViewHtml5"
				include="/plugins/html5-business-control-center/partials/views/resourceAvailabilityView.html">
				<ippui:preferences>
					<ippui:preferencePage name="icon"
						include="/plugins/views-common/images/icons/group.png" />
				</ippui:preferences>
			</ippui:view>
		</ippui:viewsExtension>
		<ippui:viewsExtension>
			<ippui:view name="roleManagerDetailViewHtml5"
				include="/plugins/html5-business-control-center/partials/views/roleManagerDetailView.html" />
		</ippui:viewsExtension>
		<ippui:viewsExtension>
			<ippui:view name="userManagerDetailViewHtml5"
				include="/plugins/html5-business-control-center/partials/views/userManagerDetailView.html" />
		</ippui:viewsExtension>

		<ippui:viewsExtension>
			<ippui:view name="roleAssignmentViewHtml5"
				include="/plugins/html5-business-control-center/partials/views/roleAssignmentView.html">
				<ippui:preferences>
					<ippui:preferencePage name="icon"
						include="/plugins/views-common/images/icons/role.png" />
				</ippui:preferences>
			</ippui:view>
		</ippui:viewsExtension>

	</ippui:perspectiveExtension>
</beans>
