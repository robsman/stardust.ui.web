<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.ui.web" module="ipp-admin-portal"
      revision="${ipp.version.full}" />

   <configurations>
      <conf name="ipp-administration-perspective-compile" description="Administration Portal - Compile Scope" />
      <conf name="ipp-administration-perspective-runtime" extends="ipp-administration-perspective-compile" description="Administration Portal - Runtime Scope" />
      <conf name="ipp-administration-perspective-provided" description="Administration Portal - Provided Scope" />
      
      <conf name="ipp-administration-perspective-sources" description="Administration Portal - Sources" />      
      
      <conf name="test" visibility="private" description="Test dependencies" />

      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="provided" visibility="private" extends="ipp-administration-perspective-provided" />
      <conf name="compile" visibility="private" extends="provided,ipp-administration-perspective-compile" />
      <conf name="runtime" visibility="private" extends="ipp-administration-perspective-runtime" />
      <conf name="all" visibility="private" extends="provided, compile, runtime, test" />
      
      <conf name="pom" description="Administration Portal POMs" />
   </configurations>

   <publications>
      <artifact name="ipp-administration-perspective" type="jar" conf="ipp-administration-perspective-compile, ipp-administration-perspective-runtime, ipp-administration-perspective-provided" />
      <artifact name="ipp-administration-perspective" type="jar" conf="ipp-administration-perspective-sources" m:classifier="sources" />
      
      <artifact name="ipp-administration-perspective" type="pom" conf="pom" ext="pom" />
   </publications>

   <dependencies>
      <!-- ipp-administration-perspective-compile -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-administration-perspective-compile->web-client-module-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-administration-perspective-compile->ipp-portal-common-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-views-common" rev="${ipp.version.full}" conf="ipp-administration-perspective-compile->ipp-views-common-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-api" rev="${ipp.version.full}" conf="ipp-administration-perspective-compile->ipp-portal-api-compile" />
      
      <!-- ipp-administration-perspective-runtime -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-administration-perspective-runtime->web-client-module-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-administration-perspective-runtime->ipp-portal-common-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-views-common" rev="${ipp.version.full}" conf="ipp-administration-perspective-runtime->ipp-views-common-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-api" rev="${ipp.version.full}" conf="ipp-administration-perspective-runtime->ipp-portal-api-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-graphics-common" rev="${ipp.version.full}" conf="ipp-administration-perspective-runtime->ipp-graphics-common-runtime" />	  

      <!-- ipp-administration-perspective-provided -->
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-administration-perspective-provided->jsf-api-module-compile" />
      <dependency org="javax.servlet" name="servlet-api" rev="${servlet-api.version}" conf="ipp-administration-perspective-provided, compile->default" />
      <dependency org="javax.el" name="el-api" rev="${el-api.version}" conf="ipp-administration-perspective-provided, compile->default" />

      <!-- compile -->
      <dependency org="javax.faces" name="jsf-api" rev="${jsf-api.version}" conf="compile->default" />

      <!-- test -->
      <dependency org="junit" name="junit" rev="${junit.version}" conf="test->default">
         <exclude org="org.hamcrest" module="hamcrest-core" />
      </dependency>
      <dependency org="org.hamcrest" name="hamcrest-core" rev="${hamcrest-core.version}" conf="test->default" />
   </dependencies>
</ivy-module>
