<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:ippui="http://infinity.com/bpm/portal/common/uiDefinition"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://infinity.com/bpm/portal/common/uiDefinition http://infinity.com/bpm/portal/common/uiDefinition.xsd">

	<ippui:perspectiveExtension
		targetPerspective="*" id="ippHtml5ProcessPortalPerspective"
		messageBundles="html5-process-portal">

		<ippui:viewsExtension>
			<ippui:view name="worklistViewHtml5"
				include="/plugins/html5-process-portal/partials/views/worklistView.html">
				<ippui:preferences>
					<ippui:preferencePage name="icon"
						include="/plugins/views-common/images/icons/clipboard-task.png" />
				</ippui:preferences>
			</ippui:view>
		</ippui:viewsExtension>
		<ippui:viewsExtension>
		<ippui:view name="notesPanelHtml5"
				include="/plugins/html5-process-portal/partials/views/notesPanel.html">
			</ippui:view>
	   </ippui:viewsExtension>

	</ippui:perspectiveExtension>
</beans>
