<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<jaxrs:server id="bpm-modeler" address="/bpm-modeler">
		<jaxrs:serviceBeans>
			<ref bean="webModelerResourceBean" />
			<ref bean="webModelerSessionRestControllerBean" />
		</jaxrs:serviceBeans>
	</jaxrs:server>

	<bean id="webModelerResourceBean"
		class="org.eclipse.stardust.ui.web.modeler.rest.ModelerResource" />
	<bean id="webModelerSessionRestControllerBean"
		class="org.eclipse.stardust.ui.web.modeler.rest.ModelerSessionRestController" />

</beans>
