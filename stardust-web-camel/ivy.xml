<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.ui.web" module=" stardust-web-camel"
      revision="${ipp.version.full}" />

   <configurations>
      <conf name="stardust-web-camel-compile" description="Web Camel - Compile Scope" />
      <conf name="stardust-web-camel-runtime" extends="stardust-web-camel-compile" description="Web Camel - Runtime Scope" />
      
      <conf name=" stardust-web-camel-sources" description="Web Camel - Sources" />
      
      <conf name="test" visibility="private" description="Test dependencies" />
      
      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="provided" visibility="private" />
      <conf name="compile" visibility="private" extends="provided, stardust-web-camel-compile" />
      <conf name="runtime" visibility="private" extends="stardust-web-camel-runtime" />
      <conf name="all" visibility="private" extends="provided, compile, runtime, test" />
      
      <conf name="pom" description="Web Camel POMs" />
   </configurations>

   <publications>
      <artifact name="stardust-web-camel" type="jar" conf="stardust-web-camel-compile, stardust-web-camel-runtime" />
      <artifact name="stardust-web-camel" type="source" ext="jar" conf="stardust-web-camel-sources" m:classifier="sources" />
      
      <artifact name="stardust-web-camel" type="pom" conf="pom" ext="pom" />
   </publications>

   <dependencies>
      <dependency org="org.eclipse.stardust.engine" name="stardust-engine-camel" rev="${ipp.version.full}" conf=" stardust-web-camel-compile->stardust-engine-camel-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf=" stardust-web-camel-compile->ipp-portal-common-compile" />
   </dependencies>
</ivy-module>
