<?xml version="1.0" encoding="UTF-8"?>
<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.ui.web" module="stardust-portal-rest-common"
      revision="${ipp.version.full}" />

   <configurations>
      <conf name="stardust-portal-rest-common-compile" description="REST Common - Compile Scope" />
      <conf name="stardust-portal-rest-common-provided" description="REST Common - Provided Scope" />
      <conf name="stardust-portal-rest-common-runtime" extends="stardust-portal-rest-common-compile" description="REST Common - Runtime Scope" />

      <conf name="stardust-portal-rest-common-sources" description="REST Common - Sources" />

      <conf name="test" visibility="private" description="Test dependencies" />

      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="compile" visibility="private" extends="stardust-portal-rest-common-compile,stardust-portal-rest-common-provided" />
      <conf name="runtime" visibility="private" extends="stardust-portal-rest-common-runtime" />
      <conf name="all" visibility="private" extends="compile, runtime, test" />
      
      <conf name="pom" description="REST Common POMs" />
   </configurations>

   <publications>
      <artifact name="stardust-portal-rest-common" type="jar" conf="stardust-portal-rest-common-compile,stardust-portal-rest-common-runtime" />
      <artifact name="stardust-portal-rest-common" type="source" ext="jar" conf="stardust-portal-rest-common-sources" m:classifier="sources" />
      <artifact name="stardust-portal-rest-common" type="pom" conf="pom" ext="pom" />
   </publications>

   <dependencies>
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" 
         conf="stardust-portal-rest-common-compile->engine-module-compile" />
      <dependency org="org.eclipse.stardust.engine" name="carnot-spring-module" rev="${ipp.version.full}" 
         conf="stardust-portal-rest-common-compile->spring-module-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}"
         conf="stardust-portal-rest-common-compile->ipp-portal-common-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-views-common" rev="${ipp.version.full}" 
         conf="stardust-portal-rest-common-compile->ipp-views-common-compile" />
      
      <dependency org="javax.ws.rs" name="jsr311-api" rev="${jsr311-api.version}" 
         conf="stardust-portal-rest-common-compile->default" />
      
      <dependency org="javax.servlet" name="servlet-api" rev="${servlet-api.version}" 
         conf="stardust-portal-rest-common-provided->default" />
   </dependencies>
</ivy-module>
