<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                       http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<jaxrs:server id="rest-common" address="/portal">
		<jaxrs:serviceBeans>
         <bean class="org.eclipse.stardust.ui.web.rest.ActivityInstanceResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.DocumentResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.DocumentTypeResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.I18nResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.ProcessDefinitionResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.ProcessInstanceResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.WorklistResource" />
         <bean class="org.eclipse.stardust.ui.web.rest.DaemonsResource" />
		</jaxrs:serviceBeans>
		<jaxrs:providers>
            <bean class="org.eclipse.stardust.ui.web.rest.exception.PortalExceptionMapper"/>
        </jaxrs:providers>
	</jaxrs:server>

</beans>

