<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd" >
<faces-config>
	<managed-bean>
		<managed-bean-name>infinityBpmEventsController</managed-bean-name>
		<managed-bean-class>
			org.eclipse.stardust.ui.web.viewscommon.common.controller.JsfBpmEventsController
		</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>

		<managed-property>
			<property-name>parentBpmEventsController</property-name>
			<value>#{infinityRequestScopedCustomBpmEventsController}</value>
		</managed-property>
	</managed-bean>


	<managed-bean>
		<managed-bean-name>infinityBpmInteractionsRegistry</managed-bean-name>
		<managed-bean-class>org.eclipse.stardust.engine.core.interactions.InteractionRegistry</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
</faces-config>