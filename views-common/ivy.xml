<ivy-module version="2.0"
   xmlns:m="http://ant.apache.org/ivy/maven"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

   <info organisation="org.eclipse.stardust.ui.web" module="ipp-views-common"
      revision="${ipp.version.full}" />

   <configurations>
      <conf name="ipp-views-common-compile" description="Views Common - Compile Scope" />
      <conf name="ipp-views-common-runtime" extends="ipp-views-common-compile" description="Views Common - Runtime Scope" />
      <conf name="ipp-views-common-provided" description="Views Common - Provided Scope" />     
      
      <conf name="ipp-views-common-sources" description="Views Common - Sources" />
   
      <conf name="test" visibility="private" description="Test dependencies" />

      <!-- compound configurations which encapsulates the above mentioned configs -->
      <conf name="provided" visibility="private" extends="ipp-views-common-provided" />
      <conf name="compile" visibility="private" extends="provided,ipp-views-common-compile" />
      <conf name="runtime" visibility="private" extends="ipp-views-common-runtime" />
      <conf name="all" visibility="private" extends="provided, compile, runtime, test" />
      
      <conf name="pom" description="Views Common POMs" />
   </configurations>

   <publications>
      <artifact name="ipp-views-common" type="jar" conf="ipp-views-common-compile, ipp-views-common-runtime, ipp-views-common-provided" />
      <artifact name="ipp-views-common" type="source" ext="jar" conf="ipp-views-common-sources" m:classifier="sources" />
      
      <artifact name="ipp-views-common" type="pom" conf="pom" ext="pom" />
   </publications>

   <dependencies>
      <!-- ipp-views-common-compile -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-views-common-compile->engine-module-compile" />
      <dependency org="org.eclipse.stardust.engine" name="carnot-spring-module" rev="${ipp.version.full}" conf="ipp-views-common-compile->spring-module-compile" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-views-common-compile->ipp-portal-common-compile" />      
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-api" rev="${ipp.version.full}" conf="ipp-views-common-compile->ipp-portal-api-compile" />

      <dependency org="org.eclipse.stardust.ui.common" name="stardust-common-introspection" rev="${ipp.version.full}" conf="ipp-views-common-compile->stardust-common-introspection-compile" />
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-common-introspection-xsd" rev="${ipp.version.full}" conf="ipp-views-common-compile->stardust-common-introspection-xsd-compile" />
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-ui-form" rev="${ipp.version.full}" conf="ipp-views-common-compile->stardust-ui-form-compile" />
      <dependency org="org.eclipse.stardust.ui.common" name="stardust-ui-form-jsf" rev="${ipp.version.full}" conf="ipp-views-common-compile->stardust-ui-form-jsf-compile" />

      <dependency org="javax.mail" name="mail" rev="${mail.version}" conf="ipp-views-common-compile->default" />
      <dependency org="commons-lang" name="commons-lang" rev="${commons-lang.version}" conf="ipp-views-common-compile->default" />
      <dependency org="org.icepdf" name="icepdf-core" rev="${icepdf-core.version}" transitive="false" conf="ipp-views-common-compile->default" />
      <dependency org="net.sourceforge.htmlcleaner" name="htmlcleaner" rev="${htmlcleaner.version}" conf="ipp-views-common-compile->default" />
      <dependency org="javax.ws.rs" name="jsr311-api" rev="${jsr311-api.version}" conf="ipp-views-common-compile->default" />
      <dependency org="com.sun.media" name="jai_imageio" rev="${jai_imageio.version}" conf="ipp-views-common-compile->default">
         <exclude org="javax.media" module="jai_core" />
      </dependency>

      <!-- ipp-views-common-runtime -->
      <dependency org="org.eclipse.stardust.engine" name="infinity-process-engine-module" rev="${ipp.version.full}" conf="ipp-views-common-runtime->engine-module-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-views-common-runtime->ipp-portal-common-runtime" />
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-api" rev="${ipp.version.full}" conf="ipp-views-common-runtime->ipp-portal-api-runtime" />
      <dependency org="org.eclipse.stardust.engine" name="carnot-spring-module" rev="${ipp.version.full}" conf="ipp-views-common-runtime->spring-module-runtime" />
      
      <dependency org="org.apache.cxf" name="cxf-api" rev="${cxf-api.version}" conf="ipp-views-common-runtime->default" >
         <exclude org="org.apache.geronimo.specs" module="geronimo-javamail_1.4_spec" />
         <exclude org="org.codehaus.woodstox" module="woodstox-core-asl" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-core" rev="${cxf-rt-core.version}" conf="ipp-views-common-runtime->default" >
         <exclude org="org.apache.cxf" module="cxf-api" />
         <exclude org="org.apache.geronimo.specs" module="geronimo-javamail_1.4_spec" />
      </dependency>
      <dependency org="org.apache.cxf" name="cxf-rt-frontend-jaxrs" rev="${cxf-rt-frontend-jaxrs.version}" conf="ipp-views-common-runtime->default">
         <exclude org="org.apache.cxf" module="cxf-api" />
         <exclude org="javax.ws.rs" module="jsr311-api" />
      </dependency>
 
      <!-- ipp-views-common-provided -->
      <dependency org="org.eclipse.stardust.ui.web" name="ipp-portal-common" rev="${ipp.version.full}" conf="ipp-views-common-provided->jsf-api-module-compile" />
      <dependency org="javax.servlet" name="servlet-api" rev="${servlet-api.version}" conf="ipp-views-common-provided->default" />
      <dependency org="javax.el" name="el-api" rev="${el-api.version}" conf="ipp-views-common-provided->default" />
      <dependency org="javax.servlet" name="jsp-api" rev="${jsp-api.version}" conf="ipp-views-common-provided->default" />
      
      <!-- compile -->
      <dependency org="org.eclipse.xsd" name="xsd-runtime" rev="${xsd-runtime.version}" transitive="false" conf="compile->default">
         <artifact name="org.eclipse.xsd" type="jar"/>
      </dependency>

      <!-- test -->
      <dependency org="junit" name="junit" rev="${junit.version}" conf="test->default">
         <exclude org="org.hamcrest" module="hamcrest-core" />
      </dependency>
      <dependency org="org.hamcrest" name="hamcrest-core" rev="${hamcrest-core.version}" conf="test->default" />      

      <!-- ******************** -->
      <!--    Override Rules    -->
      <!-- ******************** -->
      <override org="com.sun.xml.bind" module="jaxb-impl" rev="${jaxb-impl.version}" />
   </dependencies>
</ivy-module>
